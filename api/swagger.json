{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Hello-world-ci-cd ",
    "description": "Hello-world-ci-cd api documentation",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/api/",
      "description": "API server"
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "claims"
      }
    },
    "schemas": {
      "LoginUser": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/user/login": {
      "post": {
        "summary": "Login user by name and password",
        "requestBody": {
          "required": "true",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/LoginUser"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Unauthorized"
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "get": {
        "summary": "Get all Products",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Products"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Post new Product",
        "consumes": [
          "multipart/form-data"
        ],
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "parameters": [
              {
                "name": "image",
                "in": "formData",
                "required": true,
                "description": "image for product",
                "type": "file"
              },
              {
                "name": "title",
                "in": "formData",
                "required": true,
                "description": "title for product",
                "type": "string"
              },
              {
                "name": "description",
                "in": "formData",
                "required": true,
                "description": "description for product",
                "type": "string"
              },
              {
                "name": "price",
                "in": "formData",
                "required": true,
                "description": "price for product",
                "type": "string"
              }
            ],
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Product"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized.",
            "schema": {
              "$ref": "#/definitions/Unauthorized"
            }
          }
        }
      }
    },
    "/products/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "id for searching product",
          "type": "string"
        }
      ],
      "get": {
        "summary": "Get product with given ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "product with id",
            "schema": {
              "$ref": "#/definitions/id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Product"
            }
          },
          "404": {
            "description": "Failed. product not found."
          }
        }
      }
    },
    "definitions": {
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "string"
          },
          "image": {
            "type": "file"
          }
        }
      },
      "Products": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/Product"
        }
      },
      "LoginUser": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Unauthorized": {
        "type": "object",
        "properties": {
          "authorized": {
            "type": "boolean"
          }
        }
      }
    }
  }
}